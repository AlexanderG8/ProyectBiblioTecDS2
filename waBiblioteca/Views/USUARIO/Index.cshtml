@model IEnumerable<waBiblioteca.USUARIO>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/Style/buscador.css">
    <link rel="stylesheet" href="~/Style/Index.css">
    <script src="https://kit.fontawesome.com/6d642dc6ea.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
</head>

<header class="header_search">
    <img src="~/Style/img/logo.png" alt="Logo Biblioteca" class="logo">
    <h2 class="gallery_one__caption caption_search">¡Administrador!</h2>
    <button type="button" class="btn_header">@Html.ActionLink("Cerrar Sesión", "CerrarSesion", "Login")</button>
</header>

<div class="container body-content">
    <h2>Lista de Usuarios</h2>

    <form action="/Usuario/Index" method="post">
        <div class="row">
            <div class="col-md-4">
                <input class="form-control" type="text" name="nombre" placeholder="Ingrese nombre, apellido o correo" />
            </div>
            <div class="col-md-1">
                <input type="submit" class="btn btn-success" value="Buscar" />
            </div>
        </div>
    </form>
    <br />

    <p>
        @Html.ActionLink("Nuevo Registro", "Create", "Usuario", new { @class = "btn btn-info", @style = "color:white" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NOM_USUAR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.APE_USUAR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TIP_DOCUM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NUM_DOCUM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NOM_CORRE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DES_CONTR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ROL.DESCRIPCION)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NOM_USUAR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.APE_USUAR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TIP_DOCUM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NUM_DOCUM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NOM_CORRE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DES_CONTR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ROL.DESCRIPCION)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", "Usuario", new { id = item.IDD_USUAR }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Eliminar", "Delete", "Usuario", new { id = item.IDD_USUAR }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
    <div>
        <a class="btn btn-secondary" style="color:white" href="@Url.Action("Administrador", "Login")">Regresar</a>
    </div>

</div>
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<footer class="footer_search">
    <p class="foot_search">&COPY Derechos Reservados Biblioteca</p>
</footer>
