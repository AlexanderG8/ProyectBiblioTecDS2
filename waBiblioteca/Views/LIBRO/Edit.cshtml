@model waBiblioteca.LIBRO

@{
    ViewBag.Title = "Edit";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/Style/buscador.css">
    <link rel="stylesheet" href="~/Style/Index.css">
    <script src="https://kit.fontawesome.com/6d642dc6ea.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
</head>

<header class="header_search">
    <img src="~/Style/img/logo.png" alt="Logo Biblioteca" class="logo">
    <h2 class="gallery_one__caption caption_search">¡Administrador!</h2>
    <button type="button" class="btn_header">@Html.ActionLink("Cerrar Sesión", "CerrarSesion", "Login")</button>
</header>

<div class="container body-content">
    <h2>Editar libro</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IDD_LIBRO)

            <div class="form-group">
                @Html.LabelFor(model => model.NOM_LIBRO, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NOM_LIBRO, new { htmlAttributes = new { @class = "form-control", @style = "width:400px" } })
                    @Html.ValidationMessageFor(model => model.NOM_LIBRO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NOM_EDITO, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NOM_EDITO, new { htmlAttributes = new { @class = "form-control", @style = "width:400px" } })
                    @Html.ValidationMessageFor(model => model.NOM_EDITO, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NOM_AUTOR, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NOM_AUTOR, new { htmlAttributes = new { @class = "form-control", @style = "width:400px" } })
                    @Html.ValidationMessageFor(model => model.NOM_AUTOR, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NOM_IDIOM, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NOM_IDIOM, new { htmlAttributes = new { @class = "form-control", @style = "width:400px" } })
                    @Html.ValidationMessageFor(model => model.NOM_IDIOM, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NUM_PAGIN, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NUM_PAGIN, new { htmlAttributes = new { @class = "form-control", @style = "width:400px" } })
                    @Html.ValidationMessageFor(model => model.NUM_PAGIN, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DES_RESUM, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DES_RESUM, new { htmlAttributes = new { @class = "form-control", @style = "width:400px" } })
                    @Html.ValidationMessageFor(model => model.DES_RESUM, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IDD_CATER, "Categoría", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("IDD_CATER", null, htmlAttributes: new { @class = "form-control", @style = "width:400px" })
                    @Html.ValidationMessageFor(model => model.IDD_CATER, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
    <br />
    <div>
        @Html.ActionLink("Regresar a lista", "Index", "Libro", new { @class = "btn btn-secondary", @style = "color:white" })
    </div>
</div>
<br />

<footer class="footer_search">
    <p class="foot_search">&COPY Derechos Reservados Biblioteca</p>
</footer>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
